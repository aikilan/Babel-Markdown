{
  "name": "babel-md-viewer",
  "displayName": "Babel Markdown Viewer",
  "description": "Preview Markdown files transformed with Babel-style pipelines inside VS Code.",
  "publisher": "your-name",
  "version": "0.0.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-name/babel-md-viewer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "babelMdViewer.openPreview",
        "title": "Babel MD Viewer: Open Preview",
        "category": "Babel MD Viewer"
      },
      {
        "command": "babelMdViewer.refreshPreview",
        "title": "Babel MD Viewer: Refresh Preview",
        "category": "Babel MD Viewer"
      },
      {
        "command": "babelMdViewer.openTranslationPreview",
        "title": "Babel MD Viewer: Open Translation Preview",
        "category": "Babel MD Viewer"
      },
      {
        "command": "babelMdViewer.refreshTranslationPreview",
        "title": "Babel MD Viewer: Refresh Translation Preview",
        "category": "Babel MD Viewer"
      },
      {
        "command": "babelMdViewer.configureTranslationApiKey",
        "title": "Babel MD Viewer: Set Translation API Key",
        "category": "Babel MD Viewer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "babelMdViewer.openPreview",
          "group": "navigation@2",
          "when": "resourceLangId == markdown"
        }
      ],
      "editor/title": [
        {
          "command": "babelMdViewer.openTranslationPreview",
          "group": "navigation@2",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "babelMdViewer.refreshTranslationPreview",
          "group": "navigation@3",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Babel MD Viewer",
      "properties": {
        "babelMdViewer.previewTheme": {
          "type": "string",
          "default": "light",
          "enum": [
            "light",
            "dark"
          ],
          "description": "Select the theme for the preview webview."
        },
        "babelMdViewer.transformPlugins": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of Babel plugins applied before rendering Markdown."
        },
        "babelMdViewer.translation.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "markdownDescription": "Base URL for the OpenAI-compatible translation endpoint."
        },
        "babelMdViewer.translation.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key used for translation calls. Stored securely via command palette when possible; avoid committing plain text values."
        },
        "babelMdViewer.translation.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "markdownDescription": "Model identifier used for translation requests."
        },
        "babelMdViewer.translation.targetLanguage": {
          "type": "string",
          "default": "en",
          "markdownDescription": "Target language for translated Markdown output (e.g., `en`, `zh-CN`)."
        },
        "babelMdViewer.translation.timeoutMs": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "markdownDescription": "Timeout (in milliseconds) for translation API requests."
        }
      }
    }
  },
  "scripts": {
  "vscode:prepublish": "pnpm run build",
  "typecheck": "tsc -p tsconfig.json --noEmit",
  "build:extension": "vite build --config vite.config.extension.mjs",
  "build:webview": "vite build --config vite.config.webview.mjs",
  "build": "pnpm run typecheck && pnpm run build:extension && pnpm run build:webview",
  "compile": "pnpm run build",
  "package": "pnpm run build && pnpm exec vsce package --no-dependencies",
    "compile-tests": "tsc -p tsconfig.test.json",
    "watch": "tsc -watch -p tsconfig.json",
    "watch-tests": "tsc -watch -p tsconfig.test.json",
    "lint": "eslint ./src ./test --ext .ts",
    "test": "npm run compile && npm run compile-tests && node ./dist-test/runTest.js",
    "check": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.12.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0",
    "vite": "^7.2.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0"
  }
}
